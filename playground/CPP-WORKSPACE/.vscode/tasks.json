{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++17",
                "-I./include",
                "-L./lib",
                "../src/glad.c",
                "../src/main.cpp",
                "-L",
                "/usr/local/lib/",
                "-lglfw3",
                "-o",
                "${workspaceFolder}/myprogram.exe",
                "-ldl",
                "-pthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}